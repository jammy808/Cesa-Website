        <section class="w-[100%] mb-16 px-4" id="NewEvents" style="background-color: rgba(14, 19, 33, 1);">
            
            <div class="owl-carousel" id="owl">
                <% event.forEach(function(ele){ %>

                    <% var startDate = new Date(ele.eventDate); %>
                    <% var currentDate = new Date(); %>
                
                    <% var timeRemaining = startDate - currentDate; %>
                    <% var daysRemaining = Math.floor(timeRemaining / (1000 * 60 * 60 * 24)); %>
                    <% var hoursRemaining = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)); %>
                    <% var minutesRemaining = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60)); %>
                    <% var secondsRemaining = Math.floor((timeRemaining % (1000 * 60)) / 1000); %>
                
                    <% if (timeRemaining <= 0) { %>
                        <a event_id = "<%=ele._id%>" id="shift">huuu</a>
                        <% return; %>
                    <% } %>

                  <div class="text-white w-screen h-[55vh] md:h-[65vh] lg:h-[80vh]" style="background-image: url('<%= ele.imageBase64 %>');background-size: cover; background-position:center;background-repeat: no-repeat;">
                    
                    <div class="absolute inset-0 bg-gradient-to-t from-transparent to-black opacity-100 w-full"></div>
                    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black opacity-100 w-full"></div>
                    

                    <h2 class="mt-2 font-extrabold text-xl md:text-3xl lg:text-5xl text-center absolute z-20 left-[3%] top-[70%]"><%= ele.title %></h2>
                    <p class="absolute z-20 left-[3%] top-[80%] pt-1"><%= ele.description %></p>


                    <% if (arr != null && arr.includes(ele._id)) { %>
                        <p id="heading" class="absolute z-20  top-[89%] left-[3%] font-semibold lg:font-bold">You are registered for this event</p>
                    <% } else { %>
                        <button id="btn1" event_id="<%= ele._id %>" class="post-link absolute z-20 text-center px-5 py-1 rounded-3xl top-[89%] left-[3%] font-semibold lg:font-bold">Register</button>
                    <% } %>

                    <div id="countdown" class="text-white absolute z-20 top-[3%] right-[3%] font-semibold lg:font-bold">
                       <span id="heading">Event starts in - </span> 
                        <span id="days<%=ele._id %>"><%= daysRemaining %></span> days :
                        <span id="hours<%=ele._id %>"><%= hoursRemaining %></span> hours
                        <!-- <span id="minutes<%=ele._id %>"><%= minutesRemaining %></span> minutes:
                        <span id="seconds<%=ele._id %>"><%= secondsRemaining %></span> seconds -->
                    </div>

                  </div>
                <% }) %>
              </div>
            
        </section>
        

